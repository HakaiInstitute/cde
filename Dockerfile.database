FROM --platform=linux/x86_64 postgis/postgis:13-3.1-alpine
ARG POSTGRES_DB
ENV POSTGRES_DB=${POSTGRES_DB:-cde}
ARG POSTGRES_USER
ENV POSTGRES_USER=${POSTGRES_USER:-postgres}
ARG POSTGRES_PASSWORD
ENV POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-password}
ARG PGPORT
ENV PGPORT=${PGPORT:-5432}
EXPOSE ${PGPORT}
COPY ./database /docker-entrypoint-initdb.d